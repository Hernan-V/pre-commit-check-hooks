# Pre-commit hooks configuration
# This file is committed to the repository and provides default environment variables
# for all users of the hooks. Users can override these by creating a .envrc.local file.

export PRE_COMMIT_HOOK_CACHE_DIRECTORY=".git/.pre-commit-config-cache"
export PRE_COMMIT_HOOK_DOWNLOAD_BASE_URL="https://raw.githubusercontent.com/Hernan-V/pre-commit-check-hooks/main"

# Load user-specific overrides if they exist
if [ -f ".envrc.local" ]; then
  if command -v source_env >/dev/null 2>&1; then
    # Running under direnv
    source_env .envrc.local
  else
    # Running under regular bash
    source .envrc.local
  fi
fi

# Only echo if running in an interactive terminal (direnv case)
if [ -t 1 ]; then
  echo "Pre-commit hooks environment configured:"
  echo "  Cache directory: $PRE_COMMIT_HOOK_CACHE_DIRECTORY"
  echo "  Download URL: $PRE_COMMIT_HOOK_DOWNLOAD_BASE_URL"
fi